{% set products = craft.entries.section('product').all() %}

<section>
<div class="gallery">
{% for product in products %}
    {% set image = product.productImage.one() %}
    <div class="product">
        <img src="{{image.url}}" alt="{{ product.title }}">
        <h1>{{ product.title }}</h1>
        <p>{{ product.productStock }}</p>
    </div>
{% endfor %}
</div>
</section>
